<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selector_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"/>

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:text="Select your team:" />

    <ScrollView
        android:id="@+id/scrollview_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:fillViewport="true"
        android:layout_below="@id/loading_text"
        >

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >
            <RadioButton android:id="@+id/radio_almeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almer\u00eda"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_bilbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Athletic Bilbao"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_atletico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atl\u00e9tico Madrid"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_barcelona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcelona"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_celta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celta de Vigo"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_cordoba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C\u00f3rdoba"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_deportivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deportivo la Coru\u00f1a"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_eibar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eibar"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_elche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elche"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_espanyol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espanyol"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_getafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getafe"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_granada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Granada"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_levante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levante"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_malaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M\u00e1laga"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_vallecano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rayo Vallecano"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_madrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Madrid"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_sociedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Sociedad"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_sevilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sevilla"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_valencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valencia"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_villareal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Villareal"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

    </ScrollView>


</LinearLayout>