<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selector_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"/>

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:text="Select your team:" />

    <ScrollView
        android:id="@+id/scrollview_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:fillViewport="true"
        android:layout_below="@id/loading_text"
        >

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >
            <RadioButton android:id="@+id/radio_arsenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arsenal"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_aston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aston Villa"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_burnley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burnley"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_chelsea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chelsea"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_palace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystal Palace"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_everton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everton"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_hull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hull City"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_leicester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leicester City"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_liverpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liverpool"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester City"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_manu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester United"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_newcastle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newcastle United"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_qpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queens Park Rangers"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_southampton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Southampton"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_stoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stoke City"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_sunderland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunderland"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_swansea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swansea City"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_tottenham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tottenham Hotspur"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_westbrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="West Bromwich Albion"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_westham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="West Ham United"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

    </ScrollView>


</LinearLayout>