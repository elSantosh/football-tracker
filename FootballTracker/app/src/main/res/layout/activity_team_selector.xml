<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selector_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"/>

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:text="Select your team:" />

    <ScrollView
        android:id="@+id/scrollview_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:fillViewport="true"
        android:layout_below="@id/loading_text"
        >

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >
            <RadioButton android:id="@+id/radio_augsburg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FC Augsburg"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_leverkusen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayer Leverkusen"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_bayern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayern Munich"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_dortmund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borussia Dortmund"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_gladbach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borussia Monchengladbach"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_frankfurt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eintracht Frankfurt"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_freiburg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SC Freiburg"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamburger SV"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_hannover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hannover 96"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_hertha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hertha BSC"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_hoffenheim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TSG 1899 Hoffenheim"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_koln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. FC Koln"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_mainz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FSV Mainz 05"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_paderborn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SC Paderborn 07"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_schalke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schalke 04"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_stuttgart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VfB Stuttgart"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_bremen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Werder Bremen"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_wolfsburg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VfL Wolfsburg"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

    </ScrollView>


</LinearLayout>